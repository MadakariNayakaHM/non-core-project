include navbar
if(users.roles=="admin")
    table.table.align-middle 
        thead
        tr
        th(scope='col') StaffId
        th(scope='col') Name
        th(scope='col') Email
        th(scope='col') Phone 
        
        
        each u in user
            tbody
                if(u.status==1)
                    tr
                        th(scope='row')=u.staffId
                        td
                            a(href=`/user/${u.staffId}`)=u.name
                        td=u.email
                        td=u.phone
                
